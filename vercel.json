{
    "version": 2,
    "installCommand": "pnpm install --frozen-lockfile",
    "buildCommand": "pnpm -w build:web",
    "outputDirectory": "apps/web/dist",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://condo-flow-api.onrender.com/api/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}