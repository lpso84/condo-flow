{
  "name": "condoflow",
  "version": "1.0.0",
  "private": true,
  "description": "Production-grade condominium management platform for Portugal",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter @condoflow/api dev\" \"pnpm --filter @condoflow/web dev\"",
    "build": "pnpm --filter @condoflow/shared build && pnpm --filter @condoflow/api build && pnpm --filter @condoflow/web build",
    "test": "pnpm --filter \"./apps/**\" --filter \"./packages/**\" test",
    "test:watch": "pnpm --filter \"./apps/**\" --filter \"./packages/**\" test:watch",
    "lint": "pnpm --filter \"./apps/**\" --filter \"./packages/**\" lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "pnpm --filter @condoflow/api db:generate",
    "db:push": "pnpm --filter @condoflow/api db:push",
    "db:seed": "pnpm --filter @condoflow/api db:seed",
    "db:studio": "pnpm --filter @condoflow/api db:studio"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "prisma"
    ]
  }
}